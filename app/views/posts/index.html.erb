<%= render "pages/home" unless user_signed_in? %>

<div id="posts" class="transitions-enabled">
  <% @posts.each do |post| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(post.image.url(:medium)), post %>
      <div class="panel-body">
        <%= post.description %><br/>
        <strong><%= post.user.name if post.user %></strong>
        <% if current_user && post.user == current_user %>
          <div class="actions"> 
            <%= link_to edit_post_path(post)  do %>
              <i class="fa fa-pencil-square-o"></i> Edit
            <% end %>
            <%= link_to post, method: :delete, data: { confirm: "Are you sure?" }  do %>
              <i class="fa fa-trash-o"></i> Delete
            <% end %>
            </div>
        <% end %>
      </div>
      <div class="panel-footer center">
        <% if user_signed_in? %>
         <%= link_to upvote_post_path(post), remote: true, method: :put do %>
            <i class="fa fa-caret-square-o-up fa-2x"></i>
          <% end %>
          <%= link_to downvote_post_path(post), remote: true, method: :put do %>
            <i class="fa fa-caret-square-o-down fa-2x"></i>
          <% end %>
        <% end %>
        <div class="score">
          <strong><%= post.score %></strong>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
  <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>