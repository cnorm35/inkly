<%= form_for @artist do |f| %>
<div>
	<%= f.label :shop_name %>
	<%= f.text_field :shop_name %>
</div>
<div>
	<%= f.label :street_address%>
	<%= f.text_field :street_address %>
</div>
<div>
	<%= f.label :city %>
	<%= f.text_field :city %>
</div>
<div>
	<%= f.label :state %>
	<%= f.text_field :state %>
</div>
<div>
	<%= f.fields_for :user do |u| %>
		<div class="form-group">
        <%= u.label :name %>
        <%= u.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= u.label :email %>
        <%= u.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= u.label :password %>
        <%= u.password_field :password, class: "form-control" %>
      </div>
	<% end %>
</div>
	<%= f.submit %>
<% end %>